<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="switch">
        <ul class="admin-nav">
          <li class="btn btn-default">
            <%= link_to "Products", admin_products_path %>
          </li>
          <li class="btn btn-default active">
            <%= link_to "Orders", admin_orders_path %>
          </li>
          <li class="btn btn-default">
            <%= link_to "Users", admin_users_path %>
          </li>
        </ul>
      </div>
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>
              Order Number
            </th>
            <th>
              Price
            </th>
            <th>
              Payment Status
            </th>
            <th>
              Shipping Status
            </th>
            <th>
              Option
            </th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.sn %></td>
            <td><%= order.amount %></td>
            <td><%= order.payment_status %></td>
            <td><%= order.shipping_status %></td>
            <td>
              <%= link_to "Edit Detail", edit_admin_order_path(order) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>