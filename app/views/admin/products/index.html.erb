<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="switch">
        <ul class="admin-nav">
          <li class="btn btn-default active">
            <%= link_to "Products", admin_products_path %>
          </li>
          <li class="btn btn-default">
            <%= link_to "Orders", admin_orders_path %>
          </li>
          <li class="btn btn-default">
            <%= link_to "Users", admin_users_path %>
          </li>
        </ul>
      </div>
      <br>
      <div>
        <%= link_to  "Add New One", new_admin_product_path, class: "btn btn-primary" %>
      </div>
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>
              Product Name
            </th>
            <th>
              Image
            </th>
            <th>
              Price
            </th>
            <th colspan="2">
              Option
            </th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= image_tag product.image, width: '60px' %></td>
            <td><%= product.price %></td>
            <td>
              <%= link_to "Edit Detail", edit_admin_product_path(product) %>
            </td>
            <td>
              <%= link_to "", admin_product_path(product), method: :delete, data: {confirm: "Are you sure?"}, class: "glyphicon glyphicon-trash" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @products %>
      </div>

    </div>
  </div>
</div>