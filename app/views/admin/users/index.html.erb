<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="switch">
        <ul class="admin-nav">
          <li class="btn btn-default">
            <%= link_to "Products", admin_products_path %>
          </li>
          <li class="btn btn-default">
            <%= link_to "Orders", root_path %>
          </li>
          <li class="btn btn-default active">
            <%= link_to "Users", admin_users_path %>
          </li>
        </ul>
      </div>
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>
              User E-mail
            </th>
            <th>
              Admin?
            </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td>
              <% if user.role == "admin" %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>