<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="login">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group field">
          <%= f.label :email, "Email Address" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <br>
        <div class="form-group field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
        <br>
        <div class="form-group signorlogin">
          <div class="signup col-xs-6 col-md-6">
            <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %>
          </div>
          <div class="actions col-xs-6 col-md-6">
            <%= f.submit "Log in", class: "btn btn-default" %>
          </div>
        </div>
        <br>
        <hr>
        <div class="form-group">
          <div class="loginwithfb col-md-12">
            <%= link_to "Login With Facebook", class: "btn btn-default" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>