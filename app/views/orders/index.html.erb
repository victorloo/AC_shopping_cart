<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Order List</h1>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>
              Order SN
            </th>
            <th>
              Order Amount
            </th>
            <th>
              Payment Status
            </th>
            <th>
              Shipping Status
            </th>
            <th colspan="2">
              Option
            </th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.sn %>
              </td>
              <td>
                <%= order.amount %>
              </td>
              <td>
                <%= order.shipping_status.capitalize %>
              </td>
              <td>
                <%= order.payment_status.capitalize %>
              </td>
              <td>
                <%= link_to "More Detail", order_path(order) %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>